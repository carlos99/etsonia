    <div class="row recent-deals-row">
      <div class="container">
        <h2 class="recent-title">Popular Products</h2>
          <% @listings[0..3].each_with_index.each do |listing| %>
          <div class="row-recent-products">
            <div class="col-md-3">
              <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %>
                <div class="caption">
                  <p class="short-description"><%= listing.description %></p>
                  <h3 class="title-recent-deals"> <%= number_to_currency(listing.price) %></h3>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>

<div class="container-fluid container-all-products">
<img class="logo-middle" src="https://s3.amazonaws.com/etsoniastorebucket/bg/logo-main.svg" alt="">
  <div id="products">
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-md-3 box-product">
          <div class="thumbnail thumbnail-various">
          <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p> <%= number_to_currency(listing.price) %></p>
              <p class="short-description"><%= listing.description %></p>
              <p><%= listing.user.name%></p>
              <% if (user_signed_in?) && (current_user == listing.user) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% if user_signed_in? %>
    <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
  <% end %>

  <div class="row">
    <div class="fb-like" data-href="http://etsonia-store.herokuapp.com/" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div>
  </div>

</div>

<script>
  $('#main-carousel').carousel({
    interval: 40000
});
</script>