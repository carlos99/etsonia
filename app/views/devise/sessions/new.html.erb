<div class="container-fluid">
  <div class="row">
    <div class="content-singin-form">
        <h2 class="form-titles">Welcome Back</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, :placeholder => 'Email*', class: 'form-control input-login' %>
            <!-- <span><i class="fa fa-envelope-o"></i></span> -->
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password*', class: 'form-control input-login'%>
                <!-- <span><i class="fa fa-lock"></i></span> -->
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me, class: 'checkbox remember-option' %>
              <%= f.label :remember_me, class: 'remember-option' %>
            </div>
          <% end -%>

          <div class="form-group">
            <%= f.submit "Log in", class: 'btn btn-log' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>